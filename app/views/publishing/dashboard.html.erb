<div class="titleline">
  <h1>Ready for publication</h1>
</div>

<h2>Homepage</h2>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Created At</th>
      <th>Last Modified At</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% if !@pending_homepages.blank? %>
      <% for h in @pending_homepages %>
        <tr>
          <td><%= h.id %></td>
          <td><%= time_ago_in_words h.created_at %> ago</td>
          <td><%= time_ago_in_words h.updated_at %> ago</td>
          <td><%= link_to 'Publish', publish_homepage_path(h), method: :post %></td>
        </tr>
      <% end %>
    <% else %>
      <td colspan="4">There are currently no pending homepages to be published. </td>
    <% end %>
  </tbody>
</table>

<h2>Articles</h2>

<table class="table">
  <thead>
    <tr>
      <th>Article</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% if !@pending_versions.blank? %>
      <% for v in @pending_versions %>
        <tr>
          <td><%= v.article.headline %></td>
          <td>
            <% if v.article.latest_published_version.nil? %>
              Never Published
            <% else %>
              New Version Pending
            <% end %>
          </td>
          <td>
            <%= link_to 'Publish', publish_article_article_version_path(v.article, v), method: :post %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3">There are no pending versions to publish. </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Images</h2>


<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% if !@pending_images.blank? %>
      <% for i in @pending_images %>
        <tr>
          <td><%= i.caption %></td>
          <td>
            <%= link_to 'Publish', publish_image_path(i), method: :post %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">There are no pending images to publish. </td>
      </tr>
    <% end %>
  </tbody>
</table>
